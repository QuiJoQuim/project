<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_project_task_form" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra_info']/group" position="inside">
                <group string="Planning">
                    <field name="enable_task_planning" invisible="1"/>
                    <field name="date_range_id"/>
                    <field name="start_date" attrs="{'required':[('enable_task_planning','=', True)]}"/>
                    <field name="end_date" attrs="{'required':[('enable_task_planning','=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
